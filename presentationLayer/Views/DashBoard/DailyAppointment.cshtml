@{
    Layout = "_AdminLayout";
}
@model presentationLayer.Models.DashBoard.ViewModel.GetAllAppointmentVM
@inject IViewLocalizer localizer
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization

<!DOCTYPE html>
<html lang="ar">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@localizer["DailyAppointment"] </title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/ClinicProfile.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


</head>

<Body>
<div class="container bootstrap snippets bootdey">
    <div class="row">
        <div class="col-lg-12">
            <div class="main-box no-header clearfix">
                <div class="main-box-body clearfix">
                    <div class="table-responsive">
                        <table class="table user-list">
                            <thead>
                            <tr>
                                <th class = "text-center"><span>@localizer["Order"]</span></th>
                                <th class = "text-center"><span>@localizer["User"]</span></th>
                                <th class = "text-center"><span>@localizer["Date"]</span></th>
                                <th class="text-center" ><span>@localizer["Time"]</span></th>
                                <th class="text-center"><span>@localizer["AppointmentStatus"]</span></th>
                                <th class="text-center"><span>@localizer["PatientStatus"]</span></th>
                                <th class="text-center"><span>@localizer["Phone Number"]</span></th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var appointment in Model.appointments)
                            {
                                <tr class="appointment-row" onclick="window.location.href='@Url.Action("Details", "Appointment", new { appointedId = appointment.AppointmentId })'">
                                    <td class = "text-center"> @appointment.Order</td>
                                    <td  class = "text-center" >
                                        <a class="user-link" target="__blank" asp-controller="Patient" asp-action="Profile">@appointment.PatientName</a>
                                    </td>
                                    <td class = "text-center">@appointment.Date.ToString("yyyy-MM-dd")</td>
                                    <td class = "text-center">@appointment.Date.ToString("hh:mm tt")</td> <!-- Time in 12-hour format with AM/PM -->
                                    <td class="text-center">
                                        <span class="label label-default">@localizer[@appointment.Status.ToString()]</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="label label-default">@localizer[@appointment.PatientProgress.ToString()]</span>
                                    </td>
                                    <td class = "text-center">
                                        <a href="#">@appointment.PatientContact</a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</Body>

</html>
