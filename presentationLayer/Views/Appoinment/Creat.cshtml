
@inject IViewLocalizer localizer
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization

@{
  var isRTL = CultureInfo.CurrentCulture.Name.StartsWith("ar");
}
<!DOCTYPE html>

<html lang = "ar" dir = "@(isRTL ? "RTL" : "LTR")">

    <head>
        <!-- Meta Tags -->
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="keywords" content="Site keywords here">
        <meta name="description" content="">
        <meta name='copyright' content=''>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Title -->
        <title>@localizer["Book Appointment"]</title>

        <!-- Favicon -->
        <link rel="icon" href="~/img/favicon.png">

        <!-- Google Fonts -->
        <link href="https://fonts.googleapis.com/css?family=Poppins:200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&display=swap" rel="stylesheet">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="~/css/bootstrap.min.css">
        <!-- Nice Select CSS -->
        <link rel="stylesheet" href="~/css/nice-select.css">
        <!-- Font Awesome CSS -->
        <link rel="stylesheet" href="~/css/font-awesome.min.css">
        <!-- icofont CSS -->
        <link rel="stylesheet" href="~/css/icofont.css">
        <!-- Slicknav -->
        <link rel="stylesheet" href="~/css/slicknav.min.css">
        <!-- Owl Carousel CSS -->
        <link rel="stylesheet" href="~/css/owl-carousel.css">
        <!-- Datepicker CSS -->
        <link rel="stylesheet" href="~/css/datepicker.css">
        <!-- Animate CSS -->
        <link rel="stylesheet" href="~/css/animate.min.css">
        <!-- Magnific Popup CSS -->
        <link rel="stylesheet" href="~/css/magnific-popup.css">

        <!-- Medipro CSS -->
        <link rel="stylesheet" href="~/css/normalize.css">
        <link rel="stylesheet" href="~/css/Home.css">
        <link rel="stylesheet" href="~/css/responsive.css">

    </head>

<body>
<!-- Start Appointment -->
<section class="appointment">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>@localizer["We Are Always Ready to Help You. Book An Appointment"]</h2>
                    <img src="~/img/section-img.png" alt="#">
                    <p>@localizer["Lorem ipsum dolor sit amet consectetur adipiscing elit praesent aliquet. pretiumts"]</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-12 col-12">
                <form class="form" asp-controller="Appoinment" asp-action="Creat">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-12">
                            <div class="form-group">
                                <input name="name" type="text" placeholder="@localizer["Name"]">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-12">
                            <div class="form-group">
                                <input type="text" placeholder="@localizer["Date"]" id="datepicker">
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-12">
                            <div class="form-group">
                                <textarea name="message" placeholder="@localizer["Write Your Message Here....."]" style="height: 100px;"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-5 col-md-4 col-12">
                            <div class="form-group">
                                <div class="button">
                                    <button type="submit" class="btn">@localizer["Book An Appointment"]</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-7 col-md-8 col-12">
                            <p>@localizer["( We will be confirm by an Text Message )"]</p>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-6 col-md-12 ">
                <div class="appointment-image">
                    <img src="~/img/contact-img.png" alt="#">
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Appointment -->

<!-- Start Schedule Area -->
<section class="schedule">
    <div class="container">
        <div class="schedule-inner">
            <div class="row">
                <div class="col-lg-4 col-md-12 col-12">
                    <!-- single-schedule -->
                    <div class="single-schedule last" >
                        <div class="inner">
                            <div class="icon">
                                <i class="icofont-ui-clock"></i>
                            </div>
                            <div class="single-content" >
                                <h4>@localizer["Opening Hours"]</h4>
                                <ul class="time-sidual"> <!-- it will take from db -->
                                    <li class="day">@localizer["Monday - Friday"]<span>@localizer["8.00-20.00"]</span></li>
                                    <li class="day">@localizer["Saturday"]<span>@localizer["9.00-18.30"]</span></li>
                                    <li class="day">@localizer["Monday - Thursday"]<span>@localizer["9.00-15.00"]</span></li>
                                </ul>
                                <a href="#">@localizer["LEARN MORE"]<i class="fa fa-long-arrow-right"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-12">
                    <!-- single-schedule -->
                    <div class="single-schedule middle">
                        <div class="inner">
                            <div class="icon">
                                <i class="icofont-prescription"></i>
                            </div>
                            <div class="single-content">
                                <!-- <span>@localizer["Fusce Porttitor"]</span> -->
                                <h4>@localizer["Doctor Timetable"]</h4>  <!-- it wiil Rdirect him to appointement of the day -->
                                <p>@localizer["It is Timetable for Today Appointment"]</p>
                                <a href="#">@localizer["LEARN MORE"]<i class="fa fa-long-arrow-right"></i></a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- End single-->
                <div class="col-lg-4 col-md-6 col-12">
                    <!-- single-schedule -->
                    <div class="single-schedule first">
                        <div class="inner">
                            <div class="icon">
                                <i class="fa fa-ambulance"></i>
                            </div>
                            <div class="single-content">
                                <!-- <span>@localizer["Lorem Amet"]</span> -->
                                <h4>@localizer["Emergency Cases"]</h4>
                                <p>@localizer["Lorem ipsum sit amet consectetur adipiscing elit. Vivamus et erat in lacus convallis sodales."]</p>
                                <a href="#">@localizer["LEARN MORE"]<i class="fa fa-long-arrow-right"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--/End Start Schedule Area -->


