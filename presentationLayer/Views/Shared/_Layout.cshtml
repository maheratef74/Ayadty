<!-- Steller JS -->
<script src="~/js/steller.js"></script>
<!-- Wow JS -->
<script src="~/js/wow.min.js"></script>
<!-- Magnific Popup JS -->
<script src="~/js/jquery.magnific-popup.min.js"></script>
<!-- Counter Up CDN JS -->
<script src="~/js/waypoints.min.js"></script>
<!-- Bootstrap JS -->
<script src="~/js/bootstrap.min.js"></script>

</body>
</html>
