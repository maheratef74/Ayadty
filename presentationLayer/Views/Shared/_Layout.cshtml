@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options
@inject IViewLocalizer localizer
@using System.Globalization
@{
var isRTL = CultureInfo.CurrentCulture.Name.StartsWith("ar");
}
<!doctype html>
<html class="no-js" lang="ar" dir = "@(isRTL ? "RTL" : "LTR")" >
<head>
    <!-- Meta Tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="keywords" content="Site keywords here">
    <meta name="description" content="">
    <meta name='copyright' content=''>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Title -->
    <title>@localizer["Ayadty"]</title>

    <!-- Favicon -->
    <link rel="icon" href="~/img/favicon.png">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&display=swap" rel="stylesheet">



    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <!-- Nice Select CSS -->
    <link rel="stylesheet" href="~/css/nice-select.css">
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <!-- icofont CSS -->
    <link rel="stylesheet" href="~/css/icofont.css">
    <!-- Slicknav -->
    <link rel="stylesheet" href="~/css/slicknav.min.css">
    <!-- Owl Carousel CSS -->
    <link rel="stylesheet" href="~/css/owl-carousel.css">
    <!-- Datepicker CSS -->
    <link rel="stylesheet" href="~/css/datepicker.css">
    <!-- Animate CSS -->
    <link rel="stylesheet" href="~/css/animate.min.css">
    <!-- Magnific Popup CSS -->
    <link rel="stylesheet" href="~/css/magnific-popup.css">

    <!-- Medipro CSS -->
    <link rel="stylesheet" href="~/css/normalize.css">
    <link rel="stylesheet" href="~/css/Home.css">
    <link rel="stylesheet" href="~/css/responsive.css">

</head>
<body>

<!-- Preloader -->
<div class="preloader">
    <div class="loader">
        <div class="loader-outter"></div>
        <div class="loader-inner"></div>

        <div class="indicator">
            <svg width="16px" height="12px">
                <polyline id="back" points="1 6 4 6 6 11 10 1 12 6 15 6"></polyline>
                <polyline id="front" points="1 6 4 6 6 11 10 1 12 6 15 6"></polyline>
            </svg>
        </div>
    </div>
</div>
<!-- End Preloader -->

<!-- Header Area -->
<header class="header">
    <!-- Topbar -->
    <div class="topbar">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-5 col-12">
                    <!-- Contact -->
                    <ul class="top-link">
                        <li><a href="#">@localizer["About"]</a></li>
                        <li><a href="#">@localizer["Doctor"]</a></li>
                        <li><a href="#">@localizer["Contact"]</a></li>
                        <li><a href="#">@localizer["FAQ"]</a></li>
                    </ul>
                    <!-- End Contact -->
                </div>

                <div class="col-lg-6 col-md-7 col-12">
                    <!-- Top Contact -->
                    <ul class="top-contact">
                        <li class="nav-item"><partial name="_SelectLanguagePartial" /></li>
                    </ul>
                    <!-- End Top Contact -->
                </div>
            </div>
        </div>
    </div>
    <!-- End Topbar -->

    <!-- Header Inner -->
    <div class="header-inner">
        <div class="container">
            <div class="inner">
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-12">
                        <!-- Start Logo -->
                        <div class="logo">
                            <img src="~/img/Ayadty.png" alt="#" style="width: 150px; height: 100px"> <!-- direct him to home -->
                        </div>
                        <!-- End Logo -->
                        <!-- Mobile Nav -->
                        <div class="mobile-nav"></div>
                        <!-- End Mobile Nav -->
                    </div>
                    <div class="col-lg-7 col-md-9 col-12">
                        <!-- Main Menu -->
                        <div class="main-menu">
                            <nav class="navigation">
                                <ul class="nav menu">
                                    <li class="nav-item active">
                                        <a href="#">@localizer["Home"] <i class="icofont-rounded-down"></i></a>
                                        <ul class="dropdown">
                                            <li><a href="index.html">@localizer["Home Page 1"]</a></li>
                                        </ul>
                                    </li>
                                    <li class="nav-item"><a href="#">@localizer["Doctor"]</a></li>
                                    <li class="nav-item"><a href="#">@localizer["Services"]</a></li>
                                    <li class="nav-item">
                                        <a href="#">@localizer["Pages"] <i class="icofont-rounded-down"></i></a>
                                        <ul class="dropdown">
                                            <li><a href="404.html">@localizer["404 Error"]</a></li>
                                        </ul>
                                    </li>
                                    <li class="nav-item">
                                        <a href="#">@localizer["Blogs"] <i class="icofont-rounded-down"></i></a>
                                        <ul class="dropdown">
                                            <li><a href="blog-single.html">@localizer["Blog Details"]</a></li>
                                        </ul>
                                    </li>
                                    <li class="nav-item"><a href="contact.html">@localizer["Contact Us"]</a></li>
                                </ul>
                            </nav>
                        </div>
                        <!--/ End Main Menu -->
                    </div>
                    <div class="col-lg-2 col-12">
                        <div class="get-quote">
                            <a href="appointment.html" class="btn">@localizer["Book Appointment"]</a> <!--take him to appointment page -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</header>

<div>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<!-- Footer Area -->
<footer class="footer">
    <!-- Footer Top -->
    <div class="footer-top centered-content">
        <div class="container">
            <div class="row g-4 justify-content-around" style="align-items: center"> <!-- Added g-4 for horizontal space -->
                <div class="col-lg-3 col-md-6 col-12">
                    <div class="single-footer">
                        <h2>@localizer["About Us"]</h2>
                        <p>@localizer["Lorem ipsum dolor sit am consectetur adipisicing elit do eiusmod tempor incididunt ut labore dolore magna."]</p>
                        <!-- Social -->
                        <ul class="social">
                            <li><a href="#"><i class="icofont-facebook"></i></a></li>
                            <li><a href="#"><i class="icofont-google-plus"></i></a></li>
                            <li><a href="#"><i class="icofont-twitter"></i></a></li>
                            <li><a href="#"><i class="icofont-vimeo"></i></a></li>
                            <li><a href="#"><i class="icofont-pinterest"></i></a></li>
                        </ul>
                        <!-- End Social -->
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-12">
                    <div class="single-footer f-link">
                        <h2>@localizer["Quick Links"]</h2>
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-12">
                                <ul>
                                    <li><a href="#"><i class="fa fa-caret-right" aria-hidden="true"></i>@localizer["Home"]</a></li>
                                    <li><a href="#"><i class="fa fa-caret-right" aria-hidden="true"></i>@localizer["About Us"]</a></li>
                                    <li><a href="#"><i class="fa fa-caret-right" aria-hidden="true"></i>@localizer["Services"]</a></li>
                                    <li><a href="#"><i class="fa fa-caret-right" aria-hidden="true"></i>@localizer["Our Cases"]</a></li>
                                    <li><a href="#"><i class="fa fa-caret-right" aria-hidden="true"></i>@localizer["Other Links"]</a></li>
                                </ul>
                            </div>
                            <div class="col-lg-6 col-md-6 col-12">
                                <ul>
                                    <li><a href="#"><i class="fa fa-caret-right" aria-hidden="true"></i>@localizer["Consuling"]</a></li>
                                    <li><a href="#"><i class="fa fa-caret-right" aria-hidden="true"></i>@localizer["Finance"]</a></li>
                                    <li><a href="#"><i class="fa fa-caret-right" aria-hidden="true"></i>@localizer["Testimonials"]</a></li>
                                    <li><a href="#"><i class="fa fa-caret-right" aria-hidden="true"></i>@localizer["FAQ"]</a></li>
                                    <li><a href="#"><i class="fa fa-caret-right" aria-hidden="true"></i>@localizer["Contact Us"]</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-12">
                    <div class="single-footer">
                        <h2>@localizer["Open Hours"]</h2>
                        <p>@localizer["Lorem ipsum dolor sit ame consectetur adipisicing elit do eiusmod tempor incididunt."]</p>
                        <ul class="time-sidual">
                            <li class="day">@localizer["Monday - Friday"] <span>@localizer["8.00-20.00"]</span></li>
                            <li class="day">@localizer["Saturday"] <span>@localizer["9.00-18.30"]</span></li>
                            <li class="day">@localizer["Monday - Thusday"] <span>@localizer["9.00-15.00"]</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--/ End Footer Top -->
</footer>


<!--/ End Footer Area -->

<!-- jquery Min JS -->
<script src="~/js/jquery.min.js"></script>
<!-- jquery Migrate JS -->
<script src="~/js/jquery-migrate-3.0.0.js"></script>
<!-- jquery Ui JS -->
<script src="~/js/jquery-ui.min.js"></script>
<!-- Easing JS -->
<script src="~/js/easing.js"></script>
<!-- Color JS -->
<script src="~/js/colors.js"></script>
<!-- Popper JS -->
<script src="~/js/popper.min.js"></script>
<!-- Bootstrap Datepicker JS -->
<script src="~/js/bootstrap-datepicker.js"></script>
<!-- Jquery Nav JS -->
<script src="~/js/jquery.nav.js"></script>
<!-- Slicknav JS -->
<script src="~/js/slicknav.min.js"></script>
<!-- ScrollUp JS -->
<script src="~/js/jquery.scrollUp.min.js"></script>
<!-- Niceselect JS -->
<script src="~/js/niceselect.js"></script>
<!-- Tilt Jquery JS -->
<script src="~/js/tilt.jquery.min.js"></script>
<!-- Owl Carousel JS -->
<script src="~/js/owl-carousel.js"></script>
<!-- counterup JS -->
