<script>
    $(document).ready(function () {
        var successMessage = '@Html.Raw(TempData["SuccessMessage"] ?? string.Empty)';
        if (successMessage.length > 0) {
            Swal.fire({
                icon: 'success',
                title: '@localizer["Success"]',
                text: successMessage
            });
        }

        var errorMessage = '@Html.Raw(TempData["ErrorMessage"] ?? string.Empty)';
        if (errorMessage.length > 0) {
            Swal.fire({
                icon: 'error',
                title: '@localizer["Oops..."]',
                text: errorMessage
            });
        }
    });

    $(document).ready(function () {
        $("#patientSearch").on("keyup", function () {
            var query = $(this).val();

            // Perform AJAX request to the search action
            $.ajax({
                url: '/DashBoard/SearchPatients/', // Adjust this URL based on your routing
                type: 'GET',
                data: { query: query },
                success: function (data) {
                    // Update the dropdown with the returned HTML
                    $("#patientDropdown").html(data).show();
                },
                error: function () {
                    $("#patientDropdown").html('<p>Error retrieving results.</p>');
                }
            });
        });

        // Handle the selection of a patient from the dropdown
        $(document).on("click", ".patient-result", function () {
            var patientId = $(this).data("patient-id");

            // Redirect to the patient's profile page
            window.location.href = '/Patient/Profile?patientId=' + patientId;
        });
    });


</script>
