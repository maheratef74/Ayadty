
@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options
@inject IViewLocalizer localizer
@using System.Globalization
@using presentationLayer.Models.Patient.ActionRequst
@using presentationLayer.Models.Patient.ViewModel
@model UpdatePatientVM 



@{
if (User.IsInRole("Doctor") || User.IsInRole("Nurse"))
{
Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
else if (User.IsInRole("Patient"))
{
Layout = "~/Views/Shared/_Layout.cshtml";
}
else
{
Layout = "~/Views/Shared/_Layout.cshtml"; // Default layout
}
}
<!DOCTYPE html>
<head>
    
    <title>@localizer["Update Patient"]</title>
    <link rel="stylesheet" href="~/css/PatientUpdate.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
    
    
    <form asp-controller="Patient" asp-action="Update" method="post">
        <!-- Hidden fields for PatientId and AppointmentId -->
        <input type="hidden" asp-for="PatientId" />
        <div class="container">
            <div class="main-body">
                <div class="row">
                    <div class="col-lg-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-center text-center">
                                    <!-- Profile Image -->
                                  
                                    <img src="@Url.Content(Model.ProfilePhoto)" alt="ProfilePhoto" class="rounded-circle" width="150">

                                    

                                    <div class="mt-3">
                                        <h4>@Model.FullName</h4>

                                        <!-- Button to trigger file input -->
                                        <button class="btn btn-info" onclick="document.getElementById('photoInput').click()">@localizer["Change Photo"]</button>

                                        <!-- Hidden file input -->
                                        <input type="file" id="photoInput" accept="image/*" style="display:none" onchange="previewPhoto(event)">
                                    </div>
                                </div>

                                <ul class="list-group list-group-flush">
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <div class="card">
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <tr class="text-center">
                                        <h6 class="mb-0">@localizer["Full Name"]</h6>
                                        </tr>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input asp-for="FullName" type="text" class="form-control" value="@Model.FullName">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">@localizer["Mobile"]</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input asp-for="Phone" type="text" class="form-control" value="@Model.Phone">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">@localizer["Email"]</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input asp-for="Email" type="text" class="form-control" value="@Model.Email">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">@localizer["Date of Birth"]</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input asp-for="DateOfBirth" type="date" class="form-control" value="@Model.DateOfBirth.ToString("dd/MM/yyyy")">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">@localizer["Gender"]</h6>
                                    </div>
                                  
                                    <div class="col-sm-9 text-secondary">
                                        <select asp-for="Gender" id="Choice Gender" class="form-control">
                                            <option value="0">@localizer["Male"]</option>
                                            <option value="1">@localizer["Female"]</option>
                                        </select>
                                    </div>
                                </div>
  
                                    <div class="row mb-3">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">@localizer["Address"]</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            <input asp-for="Address" type="text" class="form-control" value="@Model.Address">
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">@localizer["Facebook"]</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            <input asp-for="FacebookProfile" type="text" class="form-control" value="@Model.FacebookProfile">
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">@localizer["old password"]</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            <input type="text" class="form-control" value=" ">
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">@localizer["new password"]</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            <input type="text" class="form-control" value=" ">
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-sm-3"></div>
                                        <div class="col-sm-9 text-secondary">
                                        <button type="submit" class="btn btn-primary">@localizer["Save Changes"]</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

    </form>
    <script>
        function previewPhoto(event) {
            const photo = document.getElementById('profilePhoto');
            const file = event.target.files[0];

            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    photo.src = e.target.result;
                }
                reader.readAsDataURL(file); // Convert image file to base64 string
            }
        }
    </script>

    <!-- For Lyout -->
    <!-- jquery Min JS -->
    <script src="~/js/jquery.min.js"></script>

    <!-- Main JS -->
    <script src="~/js/main.js"></script>
    <!-- For Lyout -->

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

