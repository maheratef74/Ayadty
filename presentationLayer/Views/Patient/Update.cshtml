
@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options
@inject IViewLocalizer localizer
@using System.Globalization

<!DOCTYPE html>
<head>
    
    <title>Profile Page</title>
    <link rel="stylesheet" href="~/css/PatientUpdate.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
    <div class="container">
        <div class="main-body">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <!-- Profile Image -->
                                <img id="profilePhoto" src="https://bootdey.com/img/Content/avatar/avatar6.png" alt="@localizer["Admin"]" class="rounded-circle p-1 bg-primary" width="110">

                                <div class="mt-3">
                                    <h4>@localizer["John Doe"]</h4>
                                    <p class="text-secondary mb-1">@localizer["Full Stack Developer"]</p>
                                    <p class="text-muted font-size-sm">@localizer["Bay Area, San Francisco, CA"]</p>

                                    <!-- Button to trigger file input -->
                                    <button class="btn btn-info" onclick="document.getElementById('photoInput').click()">@localizer["Change Photo"]</button>

                                    <!-- Hidden file input -->
                                    <input type="file" id="photoInput" accept="image/*" style="display:none" onchange="previewPhoto(event)">
                                </div>
                            </div>
                            
                            <ul class="list-group list-group-flush">
                               
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">@localizer["Full Name"]</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" value="@localizer["John Doe"]">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">@localizer["Mobile"]</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" value="@localizer["(320) 380-4539"]">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">@localizer["Email"]</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" value="@localizer["john@example.com"]">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">@localizer["Date of birth"]</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" value="@localizer["1-1-2000"]">
                                </div>
                            </div>
                            <div class="row mb-3">


                                <div class="col-sm-3">
                                    <h6 class="mb-0">@localizer["Gender"]</h6>
                                </div>

                                <div class="col-sm-9 text-secondary">
                                        <label for="dot-1">
                                            <input type="radio" name="gender" id="dot-1">
                                            <span class="dot one"></span>
                                            <span class="gender">Male</span>
                                        </label>
                                        <label for="dot-2">
                                            <input type="radio" name="gender" id="dot-2">
                                            <span class="dot two"></span>
                                            <span class="gender">Female</span>
                                        </label>
                                    </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">@localizer["Address"]</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" value="@localizer["Bay Area, San Francisco, CA"]">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">@localizer["Facebook"]</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" value="sdakfka@facebook.com">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">@localizer["old password"]</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" value=" ">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">@localizer["new password"]</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" value=" ">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-9 text-secondary">
                                    <button class="btn btn-primary">@localizer["Save Changes"]</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <script>
        function previewPhoto(event) {
            const photo = document.getElementById('profilePhoto');
            const file = event.target.files[0];

            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    photo.src = e.target.result;
                }
                reader.readAsDataURL(file); // Convert image file to base64 string
            }
        }
    </script>

    <!-- For Lyout -->
    <!-- jquery Min JS -->
    <script src="~/js/jquery.min.js"></script>

    <!-- Main JS -->
    <script src="~/js/main.js"></script>
    <!-- For Lyout -->

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

